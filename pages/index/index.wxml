<view class="container">
  <!-- <van-button type="primary">按钮</van-button> -->
  <van-tabs swipeable class="tabs" bind:change="tabsChange" active="{{ active }}">
    <van-tab title="{{item.title}}" name="{{ item.name }}" wx:for="{{fundTypeList}}" wx:key="index" animated>
      <view wx:if="{{fundsData.length}}">
        <view>
          <van-row class="funds-row">
            <van-col span="14">
              <view class="funds-label">基金名称</view>
              <!-- <view class="funds-value">{{item[0]}}</view> -->
            </van-col>
            <van-col span="5">
              <view class="funds-label">净值估算</view>
              <!-- <view class="funds-value red">{{item[17]}}</view> -->
            </van-col>
            <van-col span="5">
              <view class="funds-value">净值</view>
              <!-- <view class="funds-value red" wx:elif="{{item[8] >= 0}}">{{item[8]+'%'}}</view>
              <view class="funds-value green" wx:else>{{item[8]+'%'}}</view> -->
            </van-col>
          </van-row>
        </view>
        <view wx:for="{{fundsData}}" wx:key="index" class="funds">
          <van-row class="funds-row">
            <van-col span="14">
              <view class="funds-label">{{item[1]}}</view>
              <view class="funds-value">{{item[0]}}</view>
            </van-col>
            <van-col span="5">
              <view class="funds-label">{{item[5]}}</view>
              <view class="funds-value red">{{item[17]}}</view>
            </van-col>
            <van-col span="5">
              <view class="funds-label">{{item[3]}}</view>
              <view class="funds-value" wx:if="{{item[8]===''}}">-</view>
              <view class="funds-value red" wx:elif="{{item[8] >= 0}}">{{item[8]+'%'}}</view>
              <view class="funds-value green" wx:else>{{item[8]+'%'}}</view>
            </van-col>
          </van-row>
        </view>
      </view>
      <van-empty wx:else description="暂无数据" />
    </van-tab>
  </van-tabs>
